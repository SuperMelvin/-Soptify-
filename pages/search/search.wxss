/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  background-color: #000;
}

.title {
  color: #fff;
  margin-left: 50rpx;
  font-size: 40rpx;
  font-weight: bold;
}

.playlist {
  padding-top: 60rpx;
}

.playlist-content {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
}

.playlist-info {
  margin-top: 30rpx;
}

.playlist-avatar {
  width: 320rpx;
  height: 320rpx;
}

.playlist-name {
  color: #fff;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
}

.playlist-singer {
  color: #fff;
  text-align: center;
  font-size: 30rpx;
}